{
  "name": "xwp/wp-dev-lib-tests",
  "minimum-stability": "dev",
  "scripts": {
    "test": [
      "DIFF_BASE=master DIFF_HEAD=HEAD ./vendor/xwp/wp-dev-lib/scripts/pre-commit"
    ],
    "test:travis": [
      "echo 'PWD: ' $PWD",
      "ls -lah vendor/xwp/wp-dev-lib/scripts",
      "export DEV_LIB_PATH=vendor/xwp/wp-dev-lib/scripts && source $DEV_LIB_PATH/travis.install.sh && source $DEV_LIB_PATH/travis.script.sh && source $DEV_LIB_PATH/travis.after_script.sh"
    ],
    "test:setup": [
      "rm -rf vendor/xwp/wp-dev-lib && ln -s $PWD/../.. vendor/xwp/wp-dev-lib",
      "rm -rf .git && git init . && git add phpcs.xml && git commit -m 'First commit'",
      "git checkout -b test && git add . && git commit -m 'Test commit'"
    ],
    "post-install-cmd": [
      "@test:setup"
    ],
    "post-update-cmd": [
      "@test:setup"
    ]
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "wp-coding-standards/wpcs": "^0.14",
    "phpunit/phpunit": "^5"
  }
}
