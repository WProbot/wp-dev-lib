{
  "name": "xwp/wp-dev-lib-tests",
  "minimum-stability": "dev",
  "scripts": {
    "test": [
      "rm -rf git && git init .",
      "git add .",
      "vendor/xwp/wp-dev-lib/scripts/pre-commit"
    ],
    "post-install-cmd": [
      "rm -rf vendor/xwp/wp-dev-lib && ln -s ../../../../ vendor/xwp/wp-dev-lib"
    ],
    "post-update-cmd": [
      "rm -rf vendor/xwp/wp-dev-lib && ln -s ../../../../ vendor/xwp/wp-dev-lib"
    ]
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "wp-coding-standards/wpcs": "^0.14"
  }
}
